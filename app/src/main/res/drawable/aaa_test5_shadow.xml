    <item>
        <shape android:shape="rectangle">

            <corners android:radius="4dp" />

            <gradient
                android:centerX="1"
                android:centerY="1"
                android:gradientRadius="48dp"
                android:endColor="#656565"
                android:startColor="#252525"
                android:type="radial" />

            <size
                android:width="48dp"
                android:height="48dp" />

            <stroke
                android:width="8dp"
                android:color="#00404040" />
        </shape>
    </item>

</layer-list>