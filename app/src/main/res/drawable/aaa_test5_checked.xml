<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <corners android:radius="4dp" />

            <gradient
                android:angle="270"
                android:centerY="0.3"
                android:centerColor="#858484"
                android:endColor="#737373"
                android:startColor="#757575"
                android:type="linear" />

            <size
                android:width="48dp"
                android:height="48dp" />

            <stroke
                android:width="2dp"
                android:color="#ADA6B5" />
        </shape>
    </item>

</layer-list>